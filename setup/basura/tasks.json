{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Launch Microlab Script",
			"type": "shell",
			"command": "${workspaceFolder}/../../../microlab/run_microlab.sh",
			"isBackground": true,
			"problemMatcher": [
				{
					"pattern": [
						{
							"regexp": ".*Ready for debugging.*",
							"file": 1,
							"location": 2,
							"message": 3
						}
					],
					"background": {
						"activeOnStart": true,
						"beginsPattern": ".*",
						"endsPattern": ".*Ready for debugging.*"
					}
				}
			],
			"presentation": {
				"reveal": "always"
			}
		},
		{
			"label": "Full Launch Microlab",
			"dependsOn": [
				"cortex-debug: Clean and Build (stm32f405rg)",
				"Launch Microlab Script"
			],
			"dependsOrder": "sequence"
		},

{
      "label": "Launch docker Microlab",
      "type": "shell",
      "command": "cd ~/setup && docker compose pull && docker compose up -d",
      "problemMatcher": [],
	  "group": "build",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Stop docker Microlab",
      "type": "shell",
      "command": "cd ~/setup && docker compose down",
      "problemMatcher": [],
	  "group": "build",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
	{
		"label": "Full Launch docker Microlab",
		"dependsOn": [
			"cortex-debug: Clean and Build (stm32f405rg)",
