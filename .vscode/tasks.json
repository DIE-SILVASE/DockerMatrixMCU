		{
			"label": "Parar MICROLAB (Linux/Mac)",
			"type": "shell",
			"command": "cd ${workspaceFolder}/setup && docker-compose down", // Detiene el entorno del laboratorio
			"group": "build",
			"problemMatcher": [],
			"detail": "Detiene el entorno de MICROLAB."
		},
		{
			"label": "Parar MICROLAB (Windows)",
